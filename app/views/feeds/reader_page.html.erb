<script>
  $(function() {
   
$(".side-nav a").on("click",function(){$.get(this.href,null,null,"script");$("#ajaxfeeds").html("Loading.."); return false;});

  });
</script>
<!-- Header and Nav -->
   <div class="row">
     <div class="large-12 columns">  <h1 style="color:#006699;">RSS READER'</h1><!-- End Top Bar --></div>
  </div>
 
 
  <!-- End Header and Nav -->
  
  
  <div class="row">    
    
    <!-- Main Content Section -->
    <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
    <div class="large-9 push-3 columns">
      <p><div id="ajaxfeeds" ><%= render 'feedlist' %></div></p>
    </div>
    <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
  <div class="large-3 pull-9 columns">
       <ul class="side-nav">
      <% @feeds.each do |feed| %>
	 <% rss = RSS::Parser.parse(open(feed.feed_url).read, false) %>
	 <% rss.items.each do |i| %>
	 <% end %>
	 <li><%= link_to(rss.channel.title,{:action=> 'feed',:remote => true,:id => feed.id},:class=> 'rsslinklist') %></li>
	<% end %>
      </ul>     
        
   </div>
    
  </div>
    
  
  <!-- Footer -->
  
  <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-6 columns">
          <p>&copy; Rtcamp Assignment by Anant</p>
        </div>
       
      </div>
    </div> 
  </footer>


